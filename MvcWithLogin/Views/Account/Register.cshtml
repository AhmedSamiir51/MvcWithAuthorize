@model MvcWithLogin.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Create Account</h3></div>
                <div class="card-body">

                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                      
                        <hr />
                        @Html.ValidationSummary("", new { @class = "text-danger" })

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                      @Html.TextBoxFor(m => m.Fname, new { @class = "form-control", @id = "inputPassword", placeholder = "First Name " })
                                    @Html.LabelFor(m => m.Fname)
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    @Html.TextBoxFor(m => m.Lname, new { @class = "form-control", @id = "inputPassword", placeholder = "Last Name " })
                                    @Html.LabelFor(m => m.Lname)
                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">

                                    @Html.TextBoxFor(m => m.Age, new { @class = "form-control", @id = "inputPassword", placeholder = "Create a password" })
                                    @Html.LabelFor(m => m.Age)

                                </div>
                            </div>

                            </div>
                            <div class="form-floating mb-3">
                            <div class="col-md-12">
                                <div class="form-floating mb-3 mb-md-0">

                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "inputPassword", placeholder = "Create a password" })
                                    @Html.LabelFor(m => m.Email)

                                </div>
                            </div>

                        </div >

                        <div class="form-floating mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @id = "inputPassword", placeholder = "Create a password" })
                                    @Html.LabelFor(m => m.Password)

                                </div>
                            </div>
                        </div>

                        <div class="form-floating mb-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3 mb-md-0">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" , @id = "inputPassword", placeholder = "Create a password" })
                                    @Html.LabelFor(m => m.ConfirmPassword)

                                </div>
                            </div>
                        </div>

                        <div class="mt-4 mb-0">

                            <div class="mt-4 mb-0">
                                <div class="d-grid">
                                    <input type="submit" class="btn btn-primary btn-block" value="Register" />
                                </div>
                            </div>
                        </div>

                    }

                    @section Scripts {
                        @Scripts.Render("~/bundles/jqueryval")
                    }

                </div>
                        <div class="card-footer text-center py-3">
                            <div class="small"><a href="login.html">Have an account? Go to login</a></div>
                        </div>
                    </div>
        </div>
    </div>
</div>